@using Rozetka.Data.Entity
@model ProductImage

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>ProductImage</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <!-- Поле для ввода Product ID -->
            <div class="form-group">
                <label asp-for="ProductId" class="control-label">Product ID</label>
                <input asp-for="ProductId" class="form-control" />
                <span asp-validation-for="ProductId" class="text-danger"></span>
            </div>

            <!-- Поле для загрузки нескольких изображений -->
            <div class="form-group">
                <label asp-for="ImageData" class="control-label">Upload Images</label>
                <input type="file" name="imageFiles" class="form-control" multiple />
                <span asp-validation-for="ImageData" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
