@model Rozetka.Models.ViewModels.Account.LoginViewModel



<h2>@ViewData["Title"]</h2>
<div class="alert alert-danger" role="alert" style="font-size: 16px; font-family: 'Inter', sans-serif; display: block; text-align: center;">
    Не вiрний логiн або пароль. Повторіть спробу входу.
</div>


    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content" style="border-radius: 15px;">
            <div class="modal-header">
                <h5 class="enter-reg-tittle" id="authModalLabel">Вхiд</h5>

                
            </div>
            <div class="horizontal-line"></div>
            <div class="modal-body">
                <form id="auth-form" method="post" action="/Account/Login">
                    @Html.AntiForgeryToken() <!-- Токен захисту від підробки запитів -->
                    <span class="enter-reg-text">Е-пошта</span>
                    <div class="mb-3">
                        <label for="auth-email" class="form-label"></label>
                        <input type="email" class="enter-reg" id="auth-email" name="Email" required>
                    </div>
                    <span class="enter-reg-text">Пароль</span>
                    <div class="mb-3">
                        <label for="auth-password" class="form-label"></label>
                        <input type="password" class="enter-reg" id="auth-password" name="Password" required>
                    </div>
                    @*      <div class="mb-3 remember-me-container">
                    <label for="auth-remember" class="enter-reg-text">Запам'ятати мене</label>

                    <input type="checkbox" id="auth-remember" name="RememberMe" class="check-box-margins">
                    <br />
                    <span>&nbsp;</span>
                    <br />

                    </div> *@
                    <button type="submit" class="btn btn-purple w-100 btn-thicker">Увійти</button>
                    <br />
                    <div class="line-with-text">
                        <span>aбо</span>
                    </div>
                    <br />
                    @*  <div class="modal-footer">
                    <div id="auth-message" class="alert alert-danger visually-hidden" role="alert"></div>
                    </div>    *@
                </form>
            </div>
            <div class="mb-3 d-flex justify-content-between no-margin-top">
                <!-- Вхід Google -->
