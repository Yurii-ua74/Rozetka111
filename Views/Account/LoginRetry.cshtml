            <!-- Реєстрація -->
            <div class="text-center my-3">
                <span class="text-black" style="font-family: 'Inter', sans-serif; font-size: 14px;">Немає профілю? </span>
                <a href="#" class="text-primary" id="openRegisterModal">Зареєструйтеся</a>

            </div>

      </div>
    </div>
