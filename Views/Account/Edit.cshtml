   // const headerProfileImage = document.getElementById('headerProfileImage'); // Іконка в хедері

    // Функція для перевірки файлу та оновлення зображення
    fileInput.addEventListener('change', function (event) {
        const file = event.target.files[0];

        // Перевіряємо чи вибраний файл існує
        if (file) {
            // Перевіряємо тип файлу, повинен бути image/*
            const validImageTypes = ['image/jpeg', 'image/png', 'image/gif', 'image/jpg', 'image/webp'];
            if (validImageTypes.includes(file.type)) {
                // Створюємо URL для вибраного файлу і оновлюємо зображення
                const reader = new FileReader();
                reader.onload = function (e) {
                    // Оновлюємо зображення в хедері
               // headerProfileImage.src = e.target.result;
                // Оновлюємо зображення на сторінці редагування
                    profileImage.src = e.target.result;
                
                };
                reader.readAsDataURL(file);
            } else {
                // Якщо вибраний файл не є зображенням
                alert('Будь ласка, оберіть файл у форматі зображення (JPEG, PNG, GIF, JPG, WEBP).');
                fileInput.value = ''; // Очищаємо вибір файлу
            }
        }
    });

