@section Scripts {
 <script>
  
    const rangeInput = document.getElementById('customRange2');
    const personalDataLink = document.getElementById('personal-data');
    const loginPasswordLink = document.getElementById('login-password');

    const personalDataWindow = document.getElementById('personal-data-window');
    const loginPasswordWindow = document.getElementById('login-password-window');

    // Функція для оновлення кольору тексту на основі значення range і для перемикання блоків
    function updateTextColorAndVisibility() {
        // Оновлення кольорів посилань
        if (rangeInput.value == 0) {
            personalDataLink.classList.add('purple-text');
            personalDataLink.classList.remove('black-text');
            loginPasswordLink.classList.remove('purple-text');
            loginPasswordLink.classList.add('black-text');
        } else if (rangeInput.value == 10) {
            loginPasswordLink.classList.add('purple-text');
            loginPasswordLink.classList.remove('black-text');
            personalDataLink.classList.remove('purple-text');
            personalDataLink.classList.add('black-text');
        }

        // Перемикання видимості блоків
        if (rangeInput.value == 0) {
            personalDataWindow.style.display = 'block';
            loginPasswordWindow.style.display = 'none';
        } else if (rangeInput.value == 10) {
            loginPasswordWindow.style.display = 'block';
            personalDataWindow.style.display = 'none';
        }
    }

    // Функція для плавної зміни значення range
    function animateRange(targetValue) {
        let currentValue = parseInt(rangeInput.value);
        let step = currentValue < targetValue ? 1 : -1; // Збільшується або зменшується

        const interval = setInterval(() => {
            currentValue += step;
            rangeInput.value = currentValue;
            updateTextColorAndVisibility();

            if (currentValue === targetValue) {
                clearInterval(interval); // Зупиняємо анімацію, коли досягли потрібного значення
            }
        }, 100); // Повільніша анімація (кожні 100 мс)
    }

    // Подія для натискання на "Логін та пароль" (вправо)
    loginPasswordLink.addEventListener('click', function () {
        animateRange(10); // Змінюємо до 10
    });

