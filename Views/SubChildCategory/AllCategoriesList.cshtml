@using Rozetka.Data.Entity
@model IEnumerable<Category>

<style>
    
</style>

@* @{
    ViewData["Title"] = Category;
} *@


<div class="categories-list">
    
       <div class="offcanvas-header" style="color: FFFFFF;>
           <h5 class="offcanvas-title" id="offcanvasTopLabel">Каталог товарів</h5>
           <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
       </div>


    <div class="container-fluid">
        <div class="row">
            @foreach (var category in Model)
            {
                <div class="col-md-3">
                     <!-- Вміст для каталогу -->
                    <div class="left-content">
                         <ul class="catalog">
                     
                             <li style="list-style-type: none;">
                                 <div class="category-title-wrapper">
                                     <a href="/Categories/GetChildCategories?category=@category.Name" class="category-link" data-category="">
                                         <p style="font-size: 1em;">@category.Name</p> 
                                         <i class="bi bi-chevron-right"></i>
                                     </a>
                                 </div>
                             </li>
                     
                         </ul>
                     </div>
                </div>

                <div class="col-9">                    
                    <div class="row">
                        @foreach (var childCategory in category.Childcategory)   // Childcategories/GetProducts?childcategory
                        {
                            <div class="col-3">
                                <div class="right-block-item">
                                    <a href="/Childcategories/GetProducts?childcategory=@childCategory.Name" class="category-link" data-category="">
                                        <p style="font-weight: bold; font-size: 1em;">@childCategory.Name</p>                       
                                    </a>
                                    <div class="subcategory-list">
                                        @foreach (var subChildCategory in childCategory.SubChildCategories)  //  SubChildCategory/GetProducts?subchildcategoryId
                                        {
                                            <a href="/SubChildCategory/GetProducts?subchildcategoryId=@subChildCategory.Id" class="category-link" data-category="">
                                                <p>@subChildCategory.Name</p>
                                            </a>
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    
                </div>
              <hr />

            }
            
        </div>  
    </div>

</div>
