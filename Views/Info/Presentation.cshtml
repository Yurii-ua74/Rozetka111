        <!-- Третья часть списка пакетов -->
        <div class="packages-slide" style="display: none;">
          
            <br />
            <img src="~/images/DB.jpg" alt="" style="max-width: 100%; height: auto; display: block; margin: 0 auto;">
        </div>

<script>
            let currentIndex = 0;
            const slides = document.querySelectorAll('.packages-slide');
            const prevBtn = document.getElementById('prevBtn');
            const nextBtn = document.getElementById('nextBtn');
            const titles = [
                "NuGet-пакети та фреймворки",
                "NuGet-пакети та фреймворки",
                "Структура бази данних"
            ];

            function updateButtons() {
                prevBtn.disabled = currentIndex === 0;
                nextBtn.disabled = currentIndex === slides.length - 1;
            }

            function updateBlockTitle() {
                document.getElementById('blockTitle').textContent = titles[currentIndex];
            }

            function showSlide(index) {
                slides[currentIndex].style.display = 'none'; // Скрыть текущий слайд
                currentIndex = index; // Обновить индекс текущего слайда
                slides[currentIndex].style.display = 'block'; // Показать новый слайд
                updateButtons(); // Обновить состояние кнопок
                updateBlockTitle(); // Обновить заголовок
            }

            function showPrevious() {
                if (currentIndex > 0) {
                    showSlide(currentIndex - 1); // Показать предыдущий слайд
                }
            }

            function showNext() {
                if (currentIndex < slides.length - 1) {
                    showSlide(currentIndex + 1); // Показать следующий слайд
                }
            }

            // Инициализация
            showSlide(currentIndex);
</script>

