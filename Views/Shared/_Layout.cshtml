<!-- Модальне вікно для авторизації -->
<div class="modal fade" id="authModal" tabindex="-1" aria-labelledby="authModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="authModalLabel">Авторизація</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="auth-form" method="post" action="/Account/Login">
                    @Html.AntiForgeryToken() <!-- Токен захисту від підробки запитів -->
                    <div class="mb-3">
                        <label for="auth-email" class="form-label">Email:</label>
                        <input type="email" class="form-control" id="auth-email" name="Email" required>
                    </div>
                    <div class="mb-3">
                        <label for="auth-password" class="form-label">Пароль:</label>
                        <input type="password" class="form-control" id="auth-password" name="Password" required>
                    </div>
                    <div class="mb-3">
                        <label for="auth-remember" class="form-label">Запам'ятати мене</label>
                        <input type="checkbox" id="auth-remember" name="RememberMe">
                    </div>
                    <div class="modal-footer">
                        <div id="auth-message" class="alert alert-danger visually-hidden" role="alert"></div>
                        <a asp-controller="Account" asp-action="Register" class="btn btn-info">Реєстрація</a>
                        <button type="submit" class="btn btn-primary">Увійти</button>
                    </div>                  
                </form>
            </div>          
            <div class="mb-3">
                <span>&nbsp;</span>
                <!-- Вход google -->
                <a asp-action="GoogleLogin" asp-controller="Account">Login with Google</a>
                <span>&nbsp;</span>
                <!-- Вход Facebook -->
                <a asp-action="FacebookLogin" asp-controller="Account">Login with FaceBook</a>
                <!-- Тестовая кнопка Facebook -->
                <fb:login-button scope="public_profile,email"
                                 onlogin="checkLoginState();">
                </fb:login-button>

            </div>
        </div>
    </div>
</div>




