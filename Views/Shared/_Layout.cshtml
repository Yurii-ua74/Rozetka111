                            @* <div class="vertical-divider"></div> *@
                            <!-- Кнопка голосового поиска -->
                            <div class="svg-container1" type="button" id="voiceSearchButton">
                                <i class="bi bi-mic" id="micIcon"></i>
                            </div>
                            <!-- Кнопка для пошуку -->
                            <button type="submit" class="btn btn-link purple-box-with-text d-none d-sm-block" aria-label="Search">
                                <div class="svg-container2">
                                    <i class="bi bi-search fs-5 white-icon"></i>
                                </div>
                            </button>
                        </div>
                    </form>
                   
                </div>
                              
                <div class="d-flex align-items-center">
                    @if (Context.User.Identity?.IsAuthenticated ?? false)
                    {
                        @* іконка для аватарки в хедері *@
                        @* <div class="header-profile-image">
                                   <img id="headerProfileImage" src="~/images/no_avatar.png" class="img-fluid rounded-circle" alt="Profile Image" />
                           </div> *@

                        @if (User.IsInRole("Seller"))
                        {
                            <a class="list-none nav-link text-black btn-lg position-relative btn-lg"
                            asp-area="" asp-controller="Advertisement" asp-action="Index"
                            data-bs-toggle="tooltip" data-bs-placement="bottom" data-bs-title="Мої оголошення">
                                <div class="header-profile-image" style="display: block;">
                                    <img id="headerIconSeller" src="~/images/icon_seller.png" class="img-fluid rounded-circle" alt="Profile Image" />
                                </div>
                            </a>
                        }                        

                        @* Переходить на сторінку з покупками користувача(метод Purchase в HomeController) *@
                        <a class="list-none nav-link text-black btn-lg position-relative btn-lg"
                           asp-area="" asp-controller="Purchase" asp-action="Index"
                           data-bs-toggle="tooltip" data-bs-placement="bottom" data-bs-title="Покупки">
                            <div class="text-center">
                                <i class="bi bi-card-list fs-4 fs-md-3 fs-sm-3"></i>
                                <p class="menu-link-text-style mb-0">Покупки</p>
                            </div>
                        </a>
                        

                        <a class="d-none d-md-block nav-link text-black position-relative btn-lg"
                        asp-area="" asp-controller="Favorites" asp-action="Index"
                           data-bs-toggle="tooltip" data-bs-placement="bottom" data-bs-title="Обране">
                            <div class="text-center">
                                <i class="bi bi-heart fs-4 fs-md-3 fs-sm-3"></i>
                                <p class="menu-link-text-style mb-0">Обране</p>
                            </div>
                            @await Component.InvokeAsync("FavoritesCount") <!-- Вызов ViewComponent для количества избранных -->                                
                        </a>
                    }
                    else
                    {
                        @* Відкриває модальне вікно для авторизації(модальне вікно з ID authModal) *@
                        <!-- ВХІД РЕЄСТРАЦІЯ -->
                        <a type="button" href="" class="d-none d-md-block nav-link text-black btn-lg"
                           data-bs-toggle="modal"
                           data-bs-target="#authModal">
                            <div class="me-3 text-center">
                                <i class="bi bi-person fs-4 fs-md-3 fs-sm-3"></i>
                                <p class="menu-link-text-style mb-0">Увійти</p>
                            </div>
                        </a>                       
                    }
                    <!-- АКЦІЇ -->
                    <a class="d-none d-md-block nav-link text-black position-relative btn-lg"
                       asp-area="" asp-controller="Actions" asp-action="GetActions"
                       data-bs-toggle="tooltip" data-bs-placement="bottom" data-bs-title="Акції">
                        <div class="text-center">
                            <i class="bi bi-bell fs-4 fs-md-3 fs-sm-3"></i>
                            <p class="menu-link-text-style mb-0">Акції</p>
                        </div>                        
                    </a>                                                                       @* /* ////////////////////////////////////////// */ *@
                    <!-- КОШИК -->
                    @*  Переходить на сторінку з кошиком (метод LoadCartModal в CartController) *@
                        <a type="button" href="#" class="nav-link text-black position-relative btn-lg"
                           data-bs-toggle="modal"
                           data-bs-target="#cartModal">

                            <div class="text-center">
                                <i class="bi bi-cart2 fs-4 fs-md-3 fs-sm-3"></i>
                            <p class="menu-link-text-style mb-0 d-none d-sm-block">Кошик</p>
                            </div>
                            @* @await Component.InvokeAsync("CartCount") *@
                            <span id="cart-count" class="position-absolute top-0 end-0 translate-middle badge rounded-pill bg-danger" style="display:none;">
                                0
                            </span>
                        </a>
                       

                    @if (Context.User.Identity?.IsAuthenticated ?? false)
                    {
                        @if (User.IsInRole("Admin"))
                        {
                            @* <!-- АДМІНКА --> *@
                            <a class="nav-link text-black btn-lg admin-non"
                            asp-action="AdminPage" asp-controller="Home"
                            data-bs-toggle="tooltip" data-bs-placement="bottom" data-bs-title="Сторінка адміністратора">
                                <div class="text-center">
                                    <i class="bi bi-file-earmark-break-fill fs-4 fs-md-3 fs-sm-3"></i>
                                    <p class="menu-link-text-style mb-0">Админ Панель</p>
                                </div>
                            </a>
                        }
                    }
                    
                </div>
                   
            </div>
            
