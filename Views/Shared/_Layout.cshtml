<script>

    document.addEventListener("DOMContentLoaded", function () {
        const registerModal = document.getElementById('registerModal');
        const emailInput = document.getElementById('_auth-email');
        const passwordInput = document.getElementById('_auth-password');
        const confirmPasswordInput = document.getElementById('_auth-confirm-password');
        const submitButton = document.getElementById('RegistrButton');

        // Деактивируем кнопку при загрузке страницы
        submitButton.disabled = true;

        function validateEmail(email) {
            // Простой email-формат
            const emailPattern = /^[^\s@@]+@@[^\s@@]+\.[^\s@@]+$/;
            return emailPattern.test(email);
        }

        function validatePassword(password) {
            // Проверка пароля: минимум 6 символов, 1 строчная, 1 заглавная буква, 1 цифра и 1 спецсимвол
            const passwordPattern = /^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[\W_]).{6,}$/;
            return passwordPattern.test(password);
        }

        function validateForm() {
            const isEmailValid = validateEmail(emailInput.value.trim());
            const isPasswordValid = validatePassword(passwordInput.value);
            const doPasswordsMatch = passwordInput.value === confirmPasswordInput.value;

            // Кнопка активна только если все проверки пройдены
            submitButton.disabled = !(isEmailValid && isPasswordValid && doPasswordsMatch);

            // Сообщения об ошибках
            document.getElementById('email-error').textContent = isEmailValid ? '' : 'Невірний формат е-пошти.';
            document.getElementById('password-error').textContent = isPasswordValid ? '' : 'Пароль повинен містити мінімум 6 символів, велику, малу літеру, цифру та спецсимвол.';
            document.getElementById('confirm-password-error').textContent = doPasswordsMatch ? '' : 'Паролі не співпадають.';
        }

        // Обработчики событий при открытии модального окна
        registerModal.addEventListener('shown.bs.modal', function () {
            validateForm();

            [emailInput, passwordInput, confirmPasswordInput].forEach(input => {
                input.addEventListener('input', validateForm);
            });
        });

        // Очистка и деактивация при закрытии модального окна
        registerModal.addEventListener('hidden.bs.modal', function () {
            emailInput.value = '';
            passwordInput.value = '';
            confirmPasswordInput.value = '';
            submitButton.disabled = true;

            // Очищаем сообщения об ошибках
            document.getElementById('email-error').textContent = '';
            document.getElementById('password-error').textContent = '';
            document.getElementById('confirm-password-error').textContent = '';

            // Убираем обработчики событий
            [emailInput, passwordInput, confirmPasswordInput].forEach(input => {
                input.removeEventListener('input', validateForm);
            });
        });
    });
</script>


