    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const voiceSearchButton = document.getElementById('voiceSearchButton');
            const searchInput = document.getElementById('searchInput');
            const searchForm = document.getElementById('searchForm');
            const micIcon = document.getElementById('micIcon');

            if ('webkitSpeechRecognition' in window) {
                const recognition = new webkitSpeechRecognition();
                recognition.lang = 'uk-UA'; // Язык, на котором будет работать голосовой поиск

                // Когда запись голоса начинается
                recognition.onstart = function () {
                    micIcon.classList.remove('bi-mic');
                    micIcon.classList.add('bi-mic-fill'); // Меняем иконку на заполненный микрофон
                };

                // Когда запись голоса завершается
                recognition.onend = function () {
                    micIcon.classList.remove('bi-mic-fill');
                    micIcon.classList.add('bi-mic'); // Возвращаем иконку обычного микрофона
                };

                // Когда голос распознан
                recognition.onresult = function (event) {
                    const transcript = event.results[0][0].transcript;
                    searchInput.value = transcript; // Заполняем поле поиска текстом
                    // Не отправляем форму автоматически, только заполняем поле ввода
                    console.log('Распознанный текст: ', transcript);
                };

                // Обработчик клика по кнопке микрофона
                voiceSearchButton.addEventListener('click', function () {
                    recognition.start(); // Начать распознавание голоса
                });
            } else {
                voiceSearchButton.addEventListener('click', function () {
