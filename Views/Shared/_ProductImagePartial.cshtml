@model byte[]

@if (Model != null && Model.Length > 0)
{
    <img src="data:image;base64,@Convert.ToBase64String(Model)" class="card-img-top" alt="Product Image"
         style="height: 100px;width: auto;object-fit: contain;" />
}
else
{
    <img src="~/images/photoproducts/no-image.jpg" alt="No Image" style="height: 100px;width: auto;object-fit: contain;" />
}